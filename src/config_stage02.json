{
    "baseUrl": "https://tv.nrk.no",
    "mutateMetadata": true,
    "contentContainers": [
        {
            "type": "firstItem",
            "index": 0,            
            "timeout": 3,
            "locateBy": "CSS_SELECTOR",
            "locateByValue": "div.tv-series-hero",
            "contentItem": {
                "type": "firstItem",
                "index": 0,
                "locateBy": "CSS_SELECTOR",
                "locateByValue": "div.tv-series-hero-description",
                "selectValues": [
                    {
                        "selectTarget": "text",
                        "keyName": "description"
                    }
                ]
            }
        },
        {
            "type": "indexedItem",
            "index": 1,
            "timeout": 3,
            "locateBy": "CSS_SELECTOR",
            "locateByValue": "section.tv-series-section",
            "contentItem": {
                "specialHandlingSeparator": ":",
                "type": "list",
                "index": 0,
                "locateBy": "CSS_SELECTOR",
                "locateByValue": "li.tv-series-more-info-item",
                "selectValues": [
                    {
                        "selectTarget": "text",
                        "keyName": "moreInfo"
                    }
                ]
            }
        },
        {
            "type": "indexedItem",
            "index": 1,
            "timeout": 3,
            "locateBy": "CSS_SELECTOR",
            "locateByValue": "section.tv-program-section",
            "contentItem": {
                "specialHandlingSeparator": ":",
                "type": "list",
                "index": 0,
                "locateBy": "CSS_SELECTOR",
                "locateByValue": "li.tv-series-more-info-item",
                "selectValues": [
                    {
                        "selectTarget": "text",
                        "keyName": "moreInfo"
                    }
                ]
            }
        },        
        {
            "name": "poster",
            "type": "firstItem",
            "index": 0,
            "timeout": 3,
            "locateBy": "CSS_SELECTOR",
            "locateByValue": "div.tv-series-hero__main-image-wrapper",
            "contentItem": {
                "type": "firstItem",
                "index": 0,
                "locateBy": "CSS_SELECTOR",
                "locateByValue": "img.tv-series-hero-series-image__image",
                "selectValues": [
                    {
                        "selectTarget": "attribute",
                        "selectValue": "src",
                        "keyName": "src"
                    }
                ]
            }
        },
        {
            "name": "alternativePoster",
            "alternativeTo": "poster",
            "type": "firstItem",
            "index": 0,
            "timeout": 3,
            "locateBy": "CSS_SELECTOR",
            "locateByValue": "div.ludo-poster",
            "contentItem": {
                "type": "firstItem",
                "index": 0,
                "locateBy": "CSS_SELECTOR",
                "locateByValue": "img.ludo-poster__image",
                "selectValues": [
                    {
                        "selectTarget": "attribute",
                        "selectValue": "src",
                        "keyName": "src"
                    }
                ]
            }
        }
    ]
}
